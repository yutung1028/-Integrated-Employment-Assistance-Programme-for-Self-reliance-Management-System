<%- include common/header_wt_acc %>

	<div class="page-content container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="login-wrapper">
			        <div class="box">
			            <div class="content-wrap">
			            	<img src="images/hkphab_icon.png">
			                <h6>自力更生綜合就業援助計劃管理系統
			                 <!-- user.forEach(function(applicant)  { 
			                 applicant.password 
			                 }); -->
			                </h6>
			                <%if (typeof message != "undefined") { %>
			                	<div class="login_error">使用者名稱或密碼不正確</div>
			                <% } %>
			                <form method="POST" action="/login" id="login_form">
				                <input class="form-control" id="username" name="username" type="text" placeholder="用戶名稱">
				                <input class="form-control" id="password" name="password" type="password" placeholder="密碼">
				                <div class="action">
				                    <button id="login_button" class="btn btn-primary signup">登入</button>
									  
									<button disabled class="hidden btn btn-info" id="loading_icon"><span class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></span> 請稍候...</button>
									
				                </div>     
			                </form>           
			            </div>
			        </div>

			        
			    </div>
			</div>
		</div>
	</div>

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="bootstrap/js/bootstrap.min.js"></script>
    <script src="js/custom.js"></script>
    <script type="text/javascript">

    	$("#password").keyup(function(event){
		    if(event.keyCode == 13){
		        $("#login_button").click();
		    }
		});

		$("#login_button").click(function(event) {
			event.preventDefault();
			$(this).addClass("hidden");
			$("#loading_icon").removeClass("hidden");
			$("#login_form").submit();
		});

    
    </script>
  </body>
</html>